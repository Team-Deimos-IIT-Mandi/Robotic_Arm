<?xml version="1.0"?>
<robot name="drawer">
  <!-- Cabinet base -->
  <link name="cabinet">
    <visual>
      <geometry>
        <box size="0.6 0.4 0.3" />
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0" />
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.6 0.4 0.3" />
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
    </inertial>
  </link>

  <!-- Drawer -->
  <link name="drawer">
    <visual>
      <geometry>
        <box size="0.5 0.3 0.2" />
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0" />
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.3 0.2" />
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.05" />
    </inertial>
  </link>

  <!-- Prismatic joint -->
  <joint name="drawer_slide" type="prismatic">
    <parent link="cabinet" />
    <child link="drawer" />
    <origin xyz="0 0 0.15" rpy="0 0 0" />
    <axis xyz="1 0 0" />
    <limit lower="0.0" upper="0.3" effort="50.0" velocity="0.1" />
    <dynamics damping="0.1" friction="0.1" />
  </joint>
</robot>
